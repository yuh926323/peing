{
    "manifest_version": 2,
    "name": "Peing 提問箱",
    "description": "這個插件可以幫助你在問題頁面長出回應框。",
    "version": "1.0",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "browser_action": {
        "default_title": "幫助你在問題頁面長出回應框",
        "default_icon": "icon48.png"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "64": "icon64.png",
        "128": "icon128.png"
    },
    "content_scripts": [{
        "run_at": "document_idle",
        "matches": [
            "https://peing.net/*"
        ],
        "js": [
            "popup.js"
        ]
    }]
}
